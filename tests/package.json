{
  "name": "dil-lms-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for DIL-LMS mobile app using BrowserStack App Automate",
  "main": "index.js",
  "scripts": {
    "test": "wdio run wdio.conf.js",
    "test:android": "wdio run wdio.android.conf.js",
    "test:ios": "wdio run wdio.ios.conf.js",
    "test:local": "wdio run wdio.local.conf.js",
    "test:parallel": "wdio run wdio.parallel.conf.js",
    "test:smoke": "wdio run wdio.conf.js --suite smoke",
    "test:regression": "wdio run wdio.conf.js --suite regression",
    "test:debug": "wdio run wdio.conf.js --debug",
    "report": "allure generate allure-results --clean && allure open",
    "clean": "rm -rf allure-results screenshots logs"
  },
  "keywords": [
    "e2e",
    "testing",
    "mobile",
    "appium",
    "browserstack",
    "react-native"
  ],
  "author": "DIL-LMS Team",
  "license": "MIT",
  "devDependencies": {
    "@wdio/allure-reporter": "^9.19.2",
    "@wdio/appium-service": "^9.19.2",
    "@wdio/cli": "^9.19.2",
    "@wdio/local-runner": "^9.19.2",
    "@wdio/mocha-framework": "^9.19.2",
    "@wdio/spec-reporter": "^9.19.2",
    "appium": "^2.0.0",
    "chai": "^4.3.7",
    "dotenv": "^16.3.1",
    "wdio-browserstack-service": "^0.1.19"
  },
  "dependencies": {
    "allure-commandline": "^2.24.1"
  }
}
